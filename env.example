# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/smartrixdb?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-secure
JWT_EXPIRES_IN=24h

# Application Configuration
PORT=3000
NODE_ENV=development

# API Configuration
API_PREFIX=api
# Allow React Native Metro bundler (port 8081) and web development (port 3000)
CORS_ORIGIN=http://localhost:8081,http://localhost:3000

# Sage 300 Connection (for legacy data sync)
SAGE300_CONNECTION_STRING="postgresql://username:password@localhost:5432/sage300?schema=public"

# Middleware Connection (for user data)
MIDDLEWARE_CONNECTION_STRING="postgresql://username:password@localhost:5432/middleware?schema=public"

# Smartrix Connection (for images and additional data)
SMARTRIX_CONNECTION_STRING="postgresql://username:password@localhost:5432/smartrix?schema=public" 